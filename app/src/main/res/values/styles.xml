<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/marble_background</item>
        <item name="android:colorBackground">@android:color/holo_blue_light</item>
        <item name="android:colorForeground">@android:color/holo_orange_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MovieDetail">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="MovieDetail.subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#bababa</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDetail.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="MovieDetail.title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="horizontalDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="MovieDetail.vote_count">
        <item name="android:textSize">11dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">#969696</item>
    </style>
    <style name="MovieDetail.vote_average">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MovieDetail.Review">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="MovieDetail.Review.Content">
        <item name="android:textColor">@color/grey_50</item>
    </style>
    <style name="MovieDetail.Review.Author">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MovieDetail.Video">
    </style>
    <style name="MovieDetail.Video.Title">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MovieDetail.section_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_50</item>

    </style>

</resources>
